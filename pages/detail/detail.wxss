.detail {
  color: #fff;
  padding:40rpx;
}
.item {
  background: rgba(13, 14, 56, .6);
  margin-bottom: 40rpx;
  font-size: 28rpx;
  border: 1px solid #577ae7;
  padding: 20rpx 30rpx;
  border-radius: 5px;
}
.title {
  background: rgba(13, 14, 56, .6);
  height: 72rpx;
  line-height: 72rpx;
  text-indent: 30rpx;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  border: 1px solid #577ae7;
  border-radius: 5px;
}
.color, .star, .number, .money, .love, .health, .career, .summary {
  display: flex;
  line-height: 52rpx;
  margin-bottom: 20rpx;
}
.presummary {
  line-height: 52rpx;
}
.full {
  flex-grow: 1;
  padding-top: 10rpx;
  height: 30rpx;
  overflow: hidden;
}
.inner {
  height: 30rpx;
}
.money .inner {
  background-color: #fff88d;
}
.love .inner {
  background-color: #ff84ec;
}
.health .inner {
  background-color: #59be00;
}
.career .inner {
  background-color: #00dac8;
}
.summary .inner {
  background-color: #ff5a00;
}
.share {
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  background-color: #ff5a00;
  border-radius: 5px;
  color: #fff;
  margin-top: 30rpx; 
}